{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"],
			"~@/*": ["./core/*"]
		}
	},
	"include": ["src/*.ts", "./src/**/*", "./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js", "./core/**/*", "./core/**/*.ts", "./core/**/*.tsx", "./core/**/*.js"],
	"exclude": ["api/**/*.spec.ts", "api/**/*.spec.ts","node_modules/**"],
}
